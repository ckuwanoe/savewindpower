source 'https://rubygems.org'

gem 'rails', '3.2.1'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer'
  gem 'uglifier', '>= 1.0.3'
  gem 'yui-compressor'
  gem 'haml'
  gem 'jquery-rails'
end

gem 'jquery-rails'
gem 'client_side_validations'
gem 'mysql2'
gem 'devise'
gem 'mail'
gem 'paperclip'
gem 'cancan'
gem 'kaminari'

# Deploy with Capistrano
gem 'capistrano'
