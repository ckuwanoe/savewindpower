}

.span10 {
	width: 500px;
	margin-right: 10px;
}

.span4 {
	width: 290px;
}

.ui-widget-overlay {
	width: 500px;
}

.alert-message p{
	line-height:18px;
	margin-bottom:18px;
}

#toolbar {
padding: 10px 4px;
}
              
input[type="text"],
input[type="password"],
.ui-autocomplete-input,
textarea,
.uneditable-input{
  width: 210px;
  height: 18px;
}

.message {
  color: red;
  padding: 2px 5px;
	float: none;
	clear: right;
	margin: -20px 0 3px 73px;
}

div.field_with_errors div.ui-effects-wrapper {
  display: inline-block !important;
}

